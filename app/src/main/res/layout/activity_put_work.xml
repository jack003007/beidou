<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="**请注意，提交后不可更改" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_map_marker_radius_grey600_18dp"
                    android:text="定    位" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/right_text_single" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_weather"
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_weather_cloudy_grey600_18dp"
                    android:text="天    气" />

                <EditText
                    android:id="@+id/et_weather"
                    style="@style/right_text_single" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_account_multiple_grey600_18dp"
                    android:text="人    数" />

                <EditText
                    android:id="@+id/et_person"
                    style="@style/right_text_single_number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_glassdoor_grey600_18dp"
                    android:text="道    口" />

                <EditText
                    android:id="@+id/et_channel"
                    style="@style/right_text_single" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_file_document_grey600_18dp"
                    android:text="命    令" />

                <EditText
                    android:id="@+id/et_mission"
                    style="@style/right_text_single_number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_ruler_grey600_18dp"
                    android:text="工作量" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="K"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_min"
                    style="@style/right_text_single"
                    android:hint="456-450" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:text="~  K"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_max"
                    style="@style/right_text_single"
                    android:hint="457+000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_vector_triangle_grey600_18dp"
                    android:text="全站仪" />

                <EditText
                    android:id="@+id/et_total"
                    style="@style/right_text_single_number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_text_label"
                    android:drawableRight="@drawable/ic_vector_triangle_grey600_18dp"
                    android:text="水准仪" />

                <EditText
                    android:id="@+id/et_level"
                    style="@style/right_text_single_number" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
