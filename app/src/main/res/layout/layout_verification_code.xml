<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_login_margin_horizonal"
    android:layout_marginRight="@dimen/activity_login_margin_horizonal"
    android:background="@drawable/edit_foucus_corner_40"
    android:visibility="gone"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_bitmap_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/ll_ver_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="15dp">

    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorbgLoginSignIn" />

    <TextView
        android:id="@+id/tv_count_down"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="刷新" />

</LinearLayout>
