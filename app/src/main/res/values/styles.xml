    <style name="et_corner_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_margin_horizonal</item>
        <item name="android:layout_marginRight">@dimen/activity_login_margin_horizonal</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_foucus_corner_40</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/selector_black_2_white</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--主页底部导航-->
    <style name="style_rb_ic_word">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/home_click_text</item>
    </style>
    <!--选择相片来源的PopupWindow-->
    <style name="style_btn_popup_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginTop">2dp</item>-->
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/shape_corner_40_solild_white</item>
        <item name="android:textColor">#585858</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_btn_imageviewer_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/shape_corner_0_solild_white</item>
    </style>

    <style name="anim_popupwindow_bottom">
        <item name="android:windowEnterAnimation">@anim/anim_pop_up_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_up_bottom_out</item>
    </style>

    <style name="base_dynamic_layout">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="fill_child_label" parent="base_dynamic_layout">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">1px</item>
    </style>

    <style name="fill_child_content">
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:background">@drawable/shape_corner_0_solild_white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="left_text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/D9D9D9</item>

    </style>

    <style name="right_text_single">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/shape_corner_0_solild_white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="right_text_single_number" parent="right_text_single">
        <item name="android:inputType">number</item>
    </style>

</resources>
