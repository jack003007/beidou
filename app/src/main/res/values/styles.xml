<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Toolbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--系统通知栏-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionOverflowMenuStyle">@style/ToolbarMenuStyle</item>

    </style>
    <!--toolbar菜单默认样式的父类为Widget.AppCompat.Light.PopupMenu.Overflow，
                那么要更改toobar中菜单的弹出的样式，就必须继承这个父类的样式。-->
    <style name="ToolbarMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--覆盖Anchor-->
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
    </style>
    <!--Toolbar主题-->
    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--Toolbar字体颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--Toolbar图标颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--菜单-->
        <!--菜单字体大小-->
        <item name="android:textSize">12sp</item>
        <!--菜单字体颜色，ps:没有android前缀-->
        <item name="actionMenuTextColor">@color/white</item>

    </style>

    <style name="et_corner_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_margin_horizonal</item>
        <item name="android:layout_marginRight">@dimen/activity_login_margin_horizonal</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_foucus_corner_40</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/selector_black_2_white</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--主页底部导航-->
    <style name="style_rb_ic_word">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/home_click_text</item>
    </style>
    <!--主页底部导航-->
    <style name="style_btn_popup_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginTop">2dp</item>-->
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/shape_corner_40_solild_white</item>
        <item name="android:textColor">#585858</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_btn_imageviewer_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/shape_corner_0_solild_white</item>
    </style>

    <style name="anim_popupwindow_bottom">
        <item name="android:windowEnterAnimation">@anim/anim_pop_up_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_up_bottom_out</item>
    </style>
</resources>
